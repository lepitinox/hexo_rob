<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="finger">
    <xacro:macro name="finger" params="parent prefix link joint_type xyz rpy rot axis">
        <link name="${prefix}_link" >
            <visual>
                <origin xyz="0 0 0" rpy="${rot}"/>
                <geometry>
                    <mesh filename="file:///$(find rob_teleeop)/robot_nano_hand_finger1_link${link}.stl" scale="1 1 1"/>
                </geometry>
            </visual>
        </link>
        <joint name="${prefix}_joint" type="${joint_type}">
            <origin xyz="${xyz}" rpy="${rpy}" />
            <axis xyz="${axis}"/>
            <limit effort="0" velocity="0" lower="1.57" upper="1.57" />
            <parent link="${parent}"/>
            <child link="${prefix}_link"/>
        </joint>
    </xacro:macro>
</robot>